<%= form_for @user, html: { class: 'register-form' } do |f| %>
  <% if @user.avatar.attached? %>
    <%= image_tag  @user.avatar, class: 'avatar' %>
  <% end %>
  <%= f.label :username, 'Username', class: 'username-label' %>
  <%= f.text_field :username, class: 'username' %>
  <%= f.label :role, 'Role', class: 'role-label' %>
  <%= f.select :role, %w[Admin Employee], include_blank: '' %>
  <%= f.label :avatar, 'Avatar', class: 'avatar-label' %>
  <%= f.file_field :avatar, class: 'avatar-field' %>
  <%= f.submit %>
<% end %>
