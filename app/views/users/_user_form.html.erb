<%= form_for @user, html: { class: 'register-form' } do |f| %>
  <%= users_avatars(@user, 'avatar-big') %>
  <% if @user.avatar.attached? %>
    <%= link_to  "Remove", remove_avatar_path(@user.avatar.id), method: :delete %>
  <% end %>
  <%= f.label :username, 'Username', class: 'label' %>
  <%= f.text_field :username, class: 'username' %>
  <% if current_user.admin? || !logged_in?%>
    <%= f.label :role, 'Role', class: 'label' %>
    <%= f.select :role, options_for_select(%w[Admin Employee], @user.role.capitalize), include_blank: '' %>
  <% end %>
  <% if !logged_in? || @user == current_user %>
    <%= f.label :avatar, 'Avatar', class: 'label' %>
    <%= f.file_field :avatar, class: 'avatar-field' %>
  <% end %>
  <%= f.submit %>
<% end %>
