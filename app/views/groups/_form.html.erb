<%= form_for @group, html: { class: 'new_group'} do |g| %>
  <%= group_icon(@group, 'icon-big') %>
  <% if @group.icon.attached? %>
    <%= link_to  "Remove", remove_icon_path(@group.icon.id), method: :delete %>
  <% end %>
  <%= g.label :name, 'Group Name', class: 'label' %>
  <%= g.text_field :name, class: 'name' %>
  <%= g.label :icon, 'Group Icon', class: 'label' %>
  <%= g.file_field :icon, class: 'avatar-field' %>
  <%= g.submit %>
<% end %>