<div class="all-users">
  <h1 class="title">Sales</h1>
</div>

<ul class="sales-cards">
  <% @sales.each do |s| %>
    <li class="card">
      <a class="flex" href=<%= sale_path(s.id) %>>
        <ul>
          <li>
            Sale NÂº <%= s.id %>
          </li>
          <li>
            Sold by <%= s.seller.username.capitalize %>
          </li>
          <li>
            Products Sold: <%= total_products(s) %>
          </li>
          <li>
            Total Sale: <%= number_to_currency(total_sale(s)) %>
          </li>
          <li>
            Sale Made at <%= s.created_at.localtime.strftime('%d/%m/%Y %H:%M') %>
          </li>
        </ul>
      </a>
    </li>
  <% end %>
</ul>
